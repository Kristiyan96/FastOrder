- @left_link = @restaurant
- @left_class = "glyphicon glyphicon-triangle-left"
- @middle_link = @restaurant
- @middle_class = "glyphicon glyphicon-info-sign"
- @right_link = user_cart_path(current_user, current_user.cart)
- @right_class = "glyphicon glyphicon-triangle-left"


.container
	table.table.table-striped
		tbody
			-@menus.each do |menu|
				tr
					td = link_to menu.name, restaurant_menu_path(@restaurant, menu)
					td 
						-if !is_active(menu)
							= link_to "Activate", restaurant_menu_activate_path(@restaurant,menu), method: "patch", class: "btn btn-default"
						-else
							= output_menu_status(menu.active)
					td = link_to "", restaurant_menu_path(@restaurant, menu), method: :delete, 
					data: { confirm: delete_menu_text(menu.name) }, class: "glyphicon glyphicon-remove"
					td = link_to '', edit_restaurant_menu_path(@restaurant, menu), class: "glyphicon glyphicon-pencil"

