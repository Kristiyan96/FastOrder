- if current_order.fulfils_requirements?
  = link_to (t 'cart.send-order', price: number_to_currency(current_order.subtotal)), pay_order_path(current_order), class: "btn col-xs-12 pay-button"
- else
  = link_to (t 'cart.meet-requirements', min_price: number_to_currency(current_order.restaurant.min_delivery_price), current_price: number_to_currency(current_order.subtotal)), root_path, class: "btn col-xs-12 pay-button disabled"