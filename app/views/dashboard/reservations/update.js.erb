<% if @reservation.errors.any? %>
 $('.modal-content').html("<%= j(render partial: 'element_form').html_safe%>")
<% else %>
  $('#element-form').modal('hide');
  $('#reservation-<%= @reservation.id %>').fadeOut(1000);
  $('#reservations').prepend($("<%= j render @reservation %>").fadeIn('slow'));
  $('.reservation-timetable').html("<%= escape_javascript (render 'table_reservations') %>");
  $('.upcoming-reservations').html("<%= j render partial: 'upcoming_reservations' %>");
<% end %>